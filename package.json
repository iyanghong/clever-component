{
  "name": "clever-component",
  "version": "0.1.0",
  "description": "A Vue3 component library built with Vite, TypeScript and Naive UI",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "pnpm -C play dev",
    "build": "pnpm build:lib && pnpm build:types",
    "build:lib": "vite build",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly",
    "docs:dev": "pnpm -C docs dev",
    "docs:build": "pnpm -C docs build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "release": "bumpp && npm publish"
  },
  "keywords": [
    "vue",
    "vue3",
    "component",
    "library",
    "typescript",
    "vite",
    "naive-ui"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/clever-component.git"
  },
  "homepage": "https://github.com/your-username/clever-component#readme",
  "bugs": {
    "url": "https://github.com/your-username/clever-component/issues"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.0",
    "bumpp": "^9.2.0",
    "eslint": "^8.54.0",
    "eslint-plugin-vue": "^9.18.0",
    "husky": "^8.0.3",
    "jsdom": "^23.0.0",
    "lint-staged": "^15.1.0",
    "naive-ui": "^2.35.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^1.0.0",
    "vue": "^3.3.0",
    "vue-tsc": "^1.8.0"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,less,html,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/sortablejs": "^1.15.8",
    "@vicons/ionicons5": "^0.13.0",
    "lodash-es": "^4.17.21",
    "sortablejs": "^1.15.6"
  }
}